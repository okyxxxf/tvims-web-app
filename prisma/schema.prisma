// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Lecture {
  id          Int     @id @default(autoincrement())
  title       String
  content     String
  isPublished Boolean
}

model Document {
  id          Int     @id @default(autoincrement())
  title       String 
  description String 
  url         String
  isPublished Boolean
}

model PracticalWork {
  id          Int     @id @default(autoincrement())
  title       String
  content     String
  isPublished Boolean
  variants    Variant[]
}

model Variant {
  id      Int            @id @default(autoincrement())
  work    PracticalWork  @relation(fields: [workId], references: [id])
  workId  Int
  content String
}

model Test {
  id        Int     @id @default(autoincrement())
  title     String
  questions Question[]  
  attempts  TestAttempt[]
}

model Question {
  id              Int     @id @default(autoincrement())
  title           String
  correctAnswerId Int
  testId          Int
  test            Test    @relation(fields: [testId], references: [id])
  answers         Answer[]
}

model Answer {
  id         Int      @id @default(autoincrement())
  question   Question @relation(fields: [questionId], references: [id])
  questionId Int
  content    String   
}

model TestAttempt {
  id                  Int    @id @default(autoincrement())
  questionCount       Int
  correctAnswersCount Int
  name                String
  testId              Int
  test                Test   @relation(fields: [testId], references: [id])
}
